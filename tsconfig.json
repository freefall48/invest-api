
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@tasks/*": ["tasks/*"]
    }
  },
  "exclude": ["node_modules"]
}